<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto2W1N.View.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <StackLayout Margin="15, 0, 15, 0">
            <Label Text="Login "
                   FontSize="30"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>
            <Entry x:Name="txtEmail"
                   Placeholder="Digite seu Email"
                   PlaceholderColor="#ccc"
                   Text="{Binding Email}"
                   Margin="0,10,0,10"/>
            <Entry x:Name="txtSenha"
                   Placeholder="Digite sua senha"
                   PlaceholderColor="#ccc"
                   Text="{Binding Senha}"
                   Margin="0,10,0,10"
                   IsPassword="True"/>
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="Center">
                <CheckBox x:Name="ckbAdmin"
                          IsChecked="{Binding Admin}"
                          VerticalOptions="Center"
                          Margin="5,5,0,10"/>
                <Label Text="Login como Administrador"
                       VerticalOptions="Center"
                       Margin="0,5,5,10"/>
            </StackLayout>
            <Button Text="Login"
                    Margin="0,10,0,10"
                    Command="{Binding LoginCommand}"/>
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

                <Label Text="NÃ£o possui uma conta?"
                       Margin="0,11,0,0"/>
                <Button Text="Cadastre-se"
                        Command="{Binding AbrirCadastroCommand}"
                        BackgroundColor="Transparent"
                        FontAttributes="Bold"
                        TextColor="LightSalmon"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>