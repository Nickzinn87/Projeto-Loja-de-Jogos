<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto2W1N.View.CadPage"
             Title="CadPage">
    <ScrollView>
        <StackLayout Margin="15, 0, 15, 0">
            <Label Text="Cadastrar"
               FontSize="30"
               HorizontalOptions="Center"
               Margin="0,20,0,20"/>

            <Button Text="Voltar"
                    Margin="5, 0, 5, 0"
                    Command="{Binding VoltarCommand}"/>

            <Label Text="Nome"
                   TextColor="#fff"
                   FontSize="20"
                   Margin="0,5,0,5"/>
            <Entry x:Name="txtNome"
                   Placeholder="Digite seu nome"
                   PlaceholderColor="#ccc"
                   Text="{Binding Nome}"
                   Margin="0,10,0,10"/>
            <Label Text="Email"
                   TextColor="#fff"
                   FontSize="20"
                   Margin="0,5,0,5"/>
            <Entry x:Name="txtEmail"
                   Placeholder="Digite seu email"
                   PlaceholderColor="#ccc"
                   Text="{Binding Email}"
                   Margin="0,10,0,10"/>
            <Label Text="Senha"
                   TextColor="#fff"
                   FontSize="20"
                   Margin="0,5,0,5"/>
            <Entry x:Name="txtSenha"
                   Placeholder="Digite sua senha"
                   PlaceholderColor="#ccc"
                   Text="{Binding Senha}"
                   Margin="0,10,0,10"
                   IsPassword="True"/>
            <Label Text="CPF"
                   TextColor="#fff"
                   FontSize="20"
                   Margin="0,5,0,5"/>
            <Entry x:Name="txtCPF"
                   Placeholder="Digite seu CPF"
                   PlaceholderColor="#ccc"
                   Text="{Binding CPF}"
                   Margin="0,10,0,10"/>
            <StackLayout Orientation="Horizontal"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
                <CheckBox x:Name="ckbAdmin"
                          IsChecked="{Binding Admin}"
                          VerticalOptions="Center"
                          Margin="5,5,0,10"/>
                <Label Text="Cadastrar Administrador"
                   VerticalOptions="Center"
                   Margin="0,5,5,10"/>
            </StackLayout>
            <Button Text="Cadastrar"
                Margin="5,10,10,5"
                Command="{Binding CadastrarCommand}"/>
            

        </StackLayout>
    </ScrollView>
</ContentPage>